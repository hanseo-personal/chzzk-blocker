{
  "manifest_version": 3,
  "name": "chzzk-blocker",
  "version": "1.20",
  "description": "치지직 방송에서 특정 태그(카테고리)를 포함하는 방송을 숨깁니다.",
  "content_scripts": [
    {
      "matches": ["https://chzzk.naver.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon-chzzk-blocker.png"
    }
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://chzzk.naver.com/*"
  ],
  "icons": {
    "128": "icons/icon-chzzk-blocker.png"
  }
}
